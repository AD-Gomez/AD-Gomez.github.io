<style>
  .custom-background {
    background:
      linear-gradient(hsla(250, 75%, 5%, 0.5), rgba(6, 3, 21, 0.5)),
      url("/img/how.webp") center center no-repeat;
    background-size: cover;
  }

  .content--left::after {
    content: url("../../../../public/icons/rigthArrow.svg");
    width: 100%;
    color: #e5e7eb;
    height: 99%;
    font-weight: 700;
    margin-left: 8px;
    position: absolute; /* Posicionamiento absoluto */
    transform: translateX(100%) translateY(35%);
  }

  .content--right::after {
    content: url("../../../../public/icons/leftArrow.svg");
    width: 100%;
    color: #e5e7eb;
    height: 100%;
    font-weight: 700;
    position: absolute; /* Posicionamiento absoluto */
    transform: translateX(-3%) translateY(35%);
  }

  @media (max-width: 767px) {
    .content--right::after {
      content: none;
    }

    .content--left::after {
      content: none;
    }
  }
</style>


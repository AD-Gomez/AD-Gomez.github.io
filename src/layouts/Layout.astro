---
import Navbar from "../components/Navbar";
import Footer from "../components/Footer.astro";
import ButtonChat from "../components/ButtonChat";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />

    <link
      rel="icon"
      type="image/webp"
      href="/img/title-icon.webp"
      sizes="120x120"
    />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <!-- Google Maps -->
    <script
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD0VUs3BClENXZNUGnZzsgXvxcw3fVnSQY&libraries=places"
    ></script>
    <meta
      name="google-site-verification"
      content="mYTM7w20cgtRtlR9aFWNFViHfvRiKXcCrYxMptzOg2M"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    {/* Código de Google Tag Manager */}
    <script>
      // @ts-ignore
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true; // No es necesario castear j aquí
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl; // No es necesario castear j aquí
        if (f && f.parentNode) {
          f.parentNode.insertBefore(j, f);
        }
      })(window, document, "script", "dataLayer", "GTM-NT3H9XXW");
    </script>
    {/* Fin de código de Google Tag Manager */}
  </head>
  <body class="relative">
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-NT3H9XXW"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->
    <Navbar client:load />
    <slot />
    <ButtonChat client:load />
    <Footer />
  </body>
</html>
